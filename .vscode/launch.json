{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/ai-agent-skills-loader"],
      "outFiles": ["${workspaceFolder}/ai-agent-skills-loader/out/**/*.js"],
      "preLaunchTask": "compile:ai-agent-skills-loader"
    },
    {
      "name": "Run Extension (Watch)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/ai-agent-skills-loader"],
      "outFiles": ["${workspaceFolder}/ai-agent-skills-loader/out/**/*.js"],
      "preLaunchTask": "watch:ai-agent-skills-loader"
    }
  ]
}
