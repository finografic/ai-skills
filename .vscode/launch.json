{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/ai-skills-loader"
      ],
      "outFiles": ["${workspaceFolder}/ai-skills-loader/out/**/*.js"],
      "preLaunchTask": "compile:ai-skills-loader"
    },
    {
      "name": "Run Extension (Watch)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/ai-skills-loader"
      ],
      "outFiles": ["${workspaceFolder}/ai-skills-loader/out/**/*.js"],
      "preLaunchTask": "watch:ai-skills-loader"
    }
  ]
}
