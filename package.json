{
  "name": "@finografic/ai-skills",
  "version": "0.2.0",
  "private": true,
  "description": "Portable, task-specific AI behavior controls",
  "homepage": "https://github.com/finografic/ai-skills",
  "author": {
    "name": "Justin",
    "email": "justin.blair.rankin@gmail.com",
    "url": "http://finografic.github.com/cv-justin-rankin"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/finografic/ai-skills.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/ai-skills/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    "ai-skills-loader"
  ],
  "scripts": {
    "compile": "npm run compile --workspaces",
    "watch": "npm run watch --workspaces",
    "package": "npm run package --workspace=ai-skills-loader",
    "format": "dprint fmt --diff",
    "format:check": "dprint check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deps.update": "node scripts/update-deps.mjs",
    "prepare": "simple-git-hooks"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "dprint": "^0.51.1",
    "eslint": "^9.35.0",
    "eslint-plugin-markdownlint": "^0.9.0",
    "globals": "^16.4.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "dprint fmt --allow-no-files",
      "eslint --fix"
    ],
    "*.{md,json,yml,yaml}": [
      "dprint fmt --allow-no-files"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
