{
  "name": "ai-skills-loader",
  "private": true,
  "displayName": "AI Agent Skills Loader",
  "description": "Load AI agent skills into Copilot Chat with native sync support",
  "version": "0.2.0",
  "publisher": "internal",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/finografic/ai-agent-skills.git",
    "directory": "ai-agent-skills-loader"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "files": [
    "out/**",
    "images/**",
    "package.json",
    "LICENSE",
    "icon.png",
    "README.md"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-skills.load",
        "title": "AI Agent Skills: Load Skill to Clipboard"
      },
      {
        "command": "ai-skills.loadToCopilot",
        "title": "AI Agent Skills: Load & Open Copilot"
      },
      {
        "command": "ai-skills.syncToCopilot",
        "title": "AI Agent Skills: Sync to Copilot (Native)"
      },
      {
        "command": "ai-skills.unsyncFromCopilot",
        "title": "AI Agent Skills: Remove from Copilot"
      },
      {
        "command": "ai-skills.syncStatus",
        "title": "AI Agent Skills: Show Sync Status"
      },
      {
        "command": "ai-skills.openCopilotFolder",
        "title": "AI Agent Skills: Open Copilot Prompts Folder"
      }
    ],
    "keybindings": [
      {
        "command": "ai-skills.load",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "ai-skills.loadToCopilot",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      }
    ],
    "configuration": {
      "title": "AI Agent Skills Loader",
      "properties": {
        "ai-skills.skillsPath": {
          "type": "string",
          "default": "~/ai-agent-skills/skills",
          "description": "Path to skills directory"
        },
        "ai-skills.alwaysIncludeControl": {
          "type": "boolean",
          "default": true,
          "description": "Always include control directives with skills"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-agent-skills",
          "title": "AI Agent Skills",
          "icon": "images/ai-agent-skills.svg"
        }
      ]
    }
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "format": "dprint fmt --diff",
    "format:check": "dprint check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "typescript": "^5.3.0"
  }
}
